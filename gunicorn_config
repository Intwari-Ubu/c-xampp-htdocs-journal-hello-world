import multiprocessing

# Nombre de workers
workers = multiprocessing.cpu_count() * 2 + 1

# Adresse de liaison
bind = "0.0.0.0:5000"

# Configuration des workers
worker_class = "sync"
worker_connections = 1000
timeout = 30
keepalive = 2

# Journalisation
accesslog = "-"
errorlog = "-"
loglevel = "info"

